<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<p><%= link_to "Pokemons", new_path, :class => "button medium" if @trainer==current_trainer%></p>

<% @trainer.pokemons.each do |pokemon| %>
  <% if pokemon.ndex %>
    <%= image_tag("pokemon/#{pokemon.ndex}.png", alt: "pokemon") %>
    <%= button_to "Damage!", damage_path(id: pokemon), :class => "button medium", :method => :patch %>
  <% end %>
	<ul>
		<li><p>Name: <%= pokemon.name %></p></li>
		<li><p>Level: <%= pokemon.level %></p></li>
    <li><p>Health: <%= pokemon.health %></p></li>
	</ul>
<% end %>
